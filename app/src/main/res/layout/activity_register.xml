<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/screenTitle"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/path"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/screenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Register"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/screenTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backBtn"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/screenTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/screenTitle">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/screenTitle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameEt"
                Of="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="100dp"
                android:hint="enter your name"
                android:inputType="text"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/emilEt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="NotSibling" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emilEt"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:hint="enter your email"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameEt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/loginTextBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="92dp"
                android:gravity="center"
                android:text="alredy registerd!!   LogInâ†’"
                android:textColor="#5C608E"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBtn" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/gaeustText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableRight="@drawable/key"
                android:gravity="center"
                android:text="login as guest"
                android:textColor="#4387CF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loginTextBtn" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="270dp"
                android:background="@drawable/shape_base_btn"
                android:text="REGISTER"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/loginTextBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameEt" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordEt"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:hint="enter your password"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emilEt" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneEt"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:hint="enter your phone"
                android:inputType="phone"
                android:maxLength="14"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countryEt" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/countryEt"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:hint="enter your country"
                android:inputType="text"
                app:layout_constraintBottom_toTopOf="@+id/phoneEt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passwordEt" />




            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/signInGoogle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/google"
                android:tooltipText="Click this icon to register with google"
                app:layout_constraintEnd_toStartOf="@+id/signInPhone"
                app:layout_constraintStart_toEndOf="@id/signInFacebook"
                app:layout_constraintTop_toBottomOf="@+id/registerBtn"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/signInFacebook"
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/facebook_icon"
                android:tooltipText="Click this icon to register with Facebook"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBtn"
                app:layout_goneMarginStart="60dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/signInPhone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/phone"
                android:tooltipText="Click this icon to register with phone"
                app:layout_constraintEnd_toStartOf="@id/signInEmail"
                app:layout_constraintStart_toEndOf="@id/signInGoogle"
                app:layout_constraintTop_toBottomOf="@+id/registerBtn" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/signInEmail"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="70dp"
                android:background="@drawable/email"
                android:padding="3dp"
                android:tooltipText="Click this icon to register with email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBtn"
                tools:ignore="SpeakableTextPresentCheck" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>